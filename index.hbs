{{!< default}}
<div>
    <div class="gh-container">
        {{> "podcast-hero"}}
        <div class="podcast-grid">
        {{#foreach posts}}

            {{> "podcast-card" page=../pagination.page }} {{!-- partials/card.hbs --}}

        {{/foreach}}
        </div>

        {{!-- If JS isn't enabled, fallback to standard pagination --}}
        <noscript>
            <div class="gh-pagination">
                {{pagination}}
            </div>
        </noscript>
    </div>
</div>
