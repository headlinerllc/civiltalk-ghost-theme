<html lang="{{@site.locale}}">
    <head>

        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        {{! Adobe Sophia Pro Font }}
        <link rel="stylesheet" href="https://use.typekit.net/gmy0vfy.css" />
        <link rel="stylesheet" href="{{asset 'built/index.css'}}" />
        <script src="{{asset 'built/index.js'}}" defer></script>

        <title>{{meta_title}}</title>

        {{ghost_head}}
        {{! Outputs important meta data and settings, should always be in <head> }}

    </head>

    <body class="{{body_class}}">
        <div class="gh-viewport">

            <header id="gh-head" class="gh-head">
                <nav class="gh-head-inner">

                    <!-- Grid Item 1 -->
                    <div class="gh-head-brand">
                        {{!-- <a class="gh-head-logo" href="{{@site.url}}">
                            {{#if @site.logo}}
                                <img
                                    src="{{@site.logo}}"
                                    alt="{{@site.title}}"
                                />
                            {{else}}
                                {{@site.title}}
                            {{/if}}
                        </a> --}}
                        <a class="gh-burger" role="button" aria-label="menu">
                            <div class="gh-burger-box">
                                <div class="gh-burger-inner"></div>
                            </div>
                        </a>
                    </div>
                    <!-- Grid Item 2 -->
                    <div class="gh-head-menu">
                        {{navigation}}
                    </div>

                    <!-- Grid Item 3 -->
                    <div class="gh-head-actions">
                        <div class="gh-head-actions-list">

                            {{!-- {{search}} --}}
                            {{!-- {{#if @site.members_enabled}}
                    {{^if @member}}
                    <a class="gh-button" href="{{@site.signup_url}}">Subscribe</a>
                    {{else}}
                    <a class="gh-button" href="#/portal/account">Account</a>
                    {{/if}}
                {{/if}} --}}
                        </div>
                    </div>
                    <!-- Grid Item 4 -->
                    <div class="ct-login-button-container">
                        <a
                            href="https://app.civiltalk.com"
                            rel="noreferrer"
                            referrerpolicy="no-referrer"
                            target="_blank"
                        >
                            <button class="nav-cta-button">Sign up / Log in</button>
                        </a>
                    </div>
                </nav>
            </header>

            <main class="gh-main">

                {{{body}}}
                {{! All content gets inserted here, index.hbs, post.hbs, etc }}

            </main>

            <footer class="gh-foot">
                <div class="gh-container">
                    <div class="gh-foot-menu">

                        <nav class="nav">
                            <ul>
                                <li class="footer-customer-support-link">
                                    <a href="mailto:support@civiltalk.com">
                                        <h7>
                                            Email Customer Support
                                        </h7>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                        <ul class="footer-socials-list">
                            <li>
                                <a
                                    href="https://www.instagram.com/civiltalkapp"
                                    rel="noreferrer"
                                    referrerpolicy="no-referrer"
                                    target="_blank"
                                >
                                    <img
                                        src="{{asset
                                            'assets/icons/instagram_green_512.png'
                                        }}"
                                        alt="Visit our Instagram"
                                    />
                                </a>
                            </li>
                            <li>
                                <a
                                    href="https://www.linkedin.com/company/civiltalk"
                                    rel="noreferrer"
                                    referrerpolicy="no-referrer"
                                    target="_blank"
                                >
                                    <img
                                        src="{{asset
                                            'assets/icons/linkedin_green_512.png'
                                        }}"
                                        alt="Visit our Linkedin Page"
                                    />
                                </a>
                            </li>
                        </ul>
                        <h6>&copy; CivilTalk 2024</h6>
                    </div>
                </div>
            </footer>

        </div>

        {{! <foot> }}
        {{ghost_foot}}
        {{! Outputs important scripts - should always be included before closing body tag }}

    </body>
</html>